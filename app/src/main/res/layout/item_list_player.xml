<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_ava"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/iv_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_online_dot"
        android:layout_alignBottom="@id/iv_ava"
        android:layout_alignEnd="@id/iv_ava"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_ava"
        android:text="aaaaaaa"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_above="@id/tv_current_room"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_current_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang ở phòng 3"
        android:textColor="#c7c4c4"
        android:textSize="10sp"
        android:layout_toEndOf="@id/iv_ava"
        android:layout_alignBottom="@id/iv_ava"
        android:visibility="gone"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0EFF5"
        android:layout_toRightOf="@id/iv_ava"
        android:layout_below="@+id/iv_ava"/>

</RelativeLayout>