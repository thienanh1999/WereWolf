<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_room_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/rounded_border">

    <TextView
        android:id="@+id/tv_room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 0000"
        android:textColor="@android:color/black"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Placeholder"
        android:textStyle="bold"
        android:layout_below="@id/tv_room_id"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/tv_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:text="0/10"/>

    <TextView
        android:id="@+id/tv_game_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN GAME"
        android:textColor="#E6E600"
        android:layout_below="@id/tv_room_name"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_outline_amber_24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_room_name"
        android:visibility="gone"/>

</RelativeLayout>