<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bm.werewolf.Fragment.AchievementFragment">

    <RelativeLayout
        android:id="@+id/rl_achievement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="#64ffffff"
            app:tabSelectedTextColor="#ffffff"
            android:background="#80344152">

            <android.support.design.widget.TabItem
                android:id="@+id/item_inprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IN PROGRESS"/>

            <android.support.design.widget.TabItem
                android:id="@+id/item_achieved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACHIEVED"/>
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_achievement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tl_achievement">

        </android.support.v4.view.ViewPager>
    </RelativeLayout>

</FrameLayout>